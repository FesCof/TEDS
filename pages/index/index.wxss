/**index.wxss**/

.character{
  flex-direction: row;
  display : flex;
  flex-wrap: wrap;
  padding-left: 5%;
}
.character-view{
  flex-direction: column;
  display : flex;
  flex-wrap: wrap;
  /*background-color: red;*/
  min-width: 30%;
  max-width: 30%;
  margin-bottom: 5px;
  flex-direction: column;
  justify-content: center;  /*水平*/
  align-items: center; /*垂直*/
}

.character-name {
  color: #aaa;
  font-size: 30rpx;
  display: flex;
}

.character-ico {
  width: 170rpx;
  height: 170rpx;
  border-right: 1px solid rgba(0,0,0,.125);
  box-sizing: content-box;
  border-radius: .25rem 0 0 .25rem;
}